<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212121"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatingSearch_searchBarMarginLeft="3dp"
        app:floatingSearch_searchBarMarginTop="11dp"
        app:floatingSearch_searchBarMarginRight="3dp"
        app:floatingSearch_searchHint="Search for an internship"
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:floatingSearch_showSearchKey="true"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_menu="@menu/menu_items"
        app:floatingSearch_close_search_on_keyboard_dismiss="true">


    </com.arlib.floatingsearchview.FloatingSearchView>
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#eeeeee"
        android:layout_centerInParent="true"
        android:text="Bookmark"/>
    </RelativeLayout>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin!"
        android:fontFamily="sans-serif-condensed"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"
        android:id="@+id/begin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"></Button>

   </RelativeLayout>